@model IEnumerable<RM.DomainModel.Supplier>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add Supplier", "AddSupplier")
</p>
@if (Model != null) {
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SupplierCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("Contacts", "ContactList", new { id = item.SupplierID }) |
                @Html.ActionLink("Edit", "EditSupplier", new { id=item.SupplierID }) |
                @Html.ActionLink("Details", "Details", new { id=item.SupplierID }) |
                @Html.ActionLink("Delete", "DeleteSupplier", new { id = item.SupplierID })
            </td>
        </tr>
    }
    </table>
} else { 
    <p>
        @Html.DisplayText("No supplier found.")
    </p>
}
